{
  "name": "dashy",
  "version": "1.0.0",
  "description": "A dashboard to organize your life.",
  "main": "electron-main.js",
  "type": "module",
  "author": {
    "name": "Alvaro Franz"
  },
  "scripts": {
    "start": "electron .",
    "electron:dev": "nodemon --exec \"electron .\"",
    "pack": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "engines": {
    "node": "20.3.0",
    "npm": "9.6.7"
  },
  "keywords": [
    "leaflet",
    "electron",
    "sqlite",
    "sharp"
  ],
  "license": "ISC",
  "dependencies": {
    "chokidar": "^3.6.0",
    "electron-updater": "^6.6.2",
    "exif-parser": "^0.1.12",
    "fs-extra": "^11.3.0",
    "heic-jpg-exif": "^1.0.0",
    "nanoid": "^5.1.5",
    "sharp": "^0.34.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "optionalDependencies": {
    "@img/sharp-libvips-darwin-arm64": "^1.1.0",
    "@img/sharp-libvips-darwin-x64": "^1.1.0",
    "@img/sharp-libvips-linux-x64": "^1.1.0",
    "@img/sharp-libvips-linuxmusl-x64": "^1.1.0",
    "@img/sharp-libvips-win32-arm64": "^1.1.0",
    "@img/sharp-libvips-win32-x64": "^1.1.0"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.3"
  },
  "build": {
    "appId": "pizza.alvarofranz.dashy",
    "productName": "Dashy",
    "files": [
      "electron-main.js",
      "preload.js",
      "app/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**",
      "**/node_modules/sqlite3/**"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "alvarofranz",
        "repo": "dashy"
      }
    ],
    "npmRebuild": false,
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Office"
    }
  }
}