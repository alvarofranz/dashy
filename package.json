{
  "name": "dashy",
  "version": "1.0.0",
  "description": "A gamified life dashboard, now on your desktop.",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "electron:dev": "nodemon --exec \"electron .\"",
    "pack": "electron-builder",
    "postinstall": "electron-rebuild"
  },
  "engines": {
    "node": "20.3.0",
    "npm": "9.6.7"
  },
  "keywords": [
    "leaflet",
    "electron",
    "sqlite",
    "sharp"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "chokidar": "^3.6.0",
    "compare-versions": "^6.1.0",
    "exif-parser": "^0.1.12",
    "nanoid": "^5.1.5",
    "sharp": "^0.34.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "@electron/rebuild": "^3.4.1",
    "nodemon": "^3.1.3"
  },
  "build": {
    "appId": "com.example.dashy",
    "productName": "Dashy",
    "files": [
      "electron-main.js",
      "preload.js",
      "app/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "npmRebuild": true,
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Office"
    },
    "docker": {
      "linux": [
        "libheif-dev"
      ]
    }
  }
}